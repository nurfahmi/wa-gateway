<header class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
    <div class="flex items-center">
      <h1 class="text-xl font-semibold text-gray-900">WhatsApp Gateway</h1>
    </div>
    <div class="flex items-center space-x-4">
      <div class="flex items-center space-x-3">
        <div class="text-right">
          <p class="text-sm font-medium text-gray-900"><%= user.name || user.email %></p>
          <p class="text-xs text-gray-500">Workspace</p>
        </div>
        <div class="w-8 h-8 rounded-full bg-primary-100 flex items-center justify-center">
          <span class="text-sm font-medium text-primary-600"><%= (user.name || user.email).charAt(0).toUpperCase() %></span>
        </div>
      </div>
      <a href="/auth/logout" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-150">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        Logout
      </a>
    </div>
  </div>
</header>

