<aside class="w-64 bg-white border-r border-gray-200 min-h-screen flex flex-col">
  <% if (typeof productPageUrl !== 'undefined' && productPageUrl) { %>
  <!-- Get More Devices CTA - TOP with eye-catching animation -->
  <div class="p-4 border-b border-gray-200">
    <a href="<%= productPageUrl %>" target="_blank" rel="noopener noreferrer" 
       class="sidebar-cta-btn group relative block w-full overflow-hidden rounded-xl transition-all duration-300 hover:scale-[1.02]">
      <!-- Animated flashing background -->
      <div class="absolute inset-0 bg-gradient-to-r from-orange-500 via-pink-500 to-purple-600 rounded-xl"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-pink-500 to-orange-500 rounded-xl animate-gradient-shift"></div>
      
      <!-- Shimmer effect overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full animate-shimmer rounded-xl"></div>
      
      <!-- Content -->
      <div class="relative z-10 flex items-center justify-center gap-2 px-4 py-3 text-white">
        <!-- Sparkle icon with pulse -->
        <span class="relative">
          <svg class="w-5 h-5 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <!-- Double pulse ring -->
          <span class="absolute -inset-1 rounded-full border-2 border-white/50 animate-ping"></span>
        </span>
        <span class="font-bold text-sm tracking-wide drop-shadow-lg">
          Get More Devices
        </span>
        <!-- Arrow with bounce -->
        <svg class="w-4 h-4 animate-bounce-x" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </div>
      
      <!-- Glow effect -->
      <div class="absolute -inset-1 bg-gradient-to-r from-orange-500 via-pink-500 to-purple-600 rounded-xl blur-lg opacity-50 group-hover:opacity-75 transition-opacity duration-300 -z-10 animate-pulse"></div>
    </a>
  </div>
  <% } %>

  <nav class="p-4 flex-1">
    <ul class="space-y-1">
      <!-- Main Section -->
      <li class="pb-2">
        <span class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">Main</span>
      </li>
      <li>
        <a href="/dashboard" class="flex items-center px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors duration-150">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <span class="font-medium">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/accounts" class="flex items-center px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors duration-150">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          <span class="font-medium">Devices</span>
        </a>
      </li>
      <li>
        <a href="/messages" class="flex items-center px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors duration-150">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <span class="font-medium">Message Logs</span>
        </a>
      </li>
      
      <!-- Developer Section -->
      <li class="pt-4 pb-2">
        <span class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">Developer</span>
      </li>
      <li>
        <a href="/docs" class="flex items-center px-4 py-3 rounded-lg text-gray-700 hover:bg-gray-50 hover:text-primary-600 transition-colors duration-150">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <span class="font-medium">API Documentation</span>
        </a>
      </li>
    </ul>
  </nav>
</aside>

<style>
  /* Sidebar CTA Animations */
  @keyframes gradient-shift {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }
  
  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(200%); }
  }
  
  @keyframes bounce-x {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(4px); }
  }
  
  .animate-gradient-shift {
    animation: gradient-shift 2s ease-in-out infinite;
  }
  
  .animate-shimmer {
    animation: shimmer 2.5s ease-in-out infinite;
  }
  
  .animate-bounce-x {
    animation: bounce-x 1s ease-in-out infinite;
  }
  
  .sidebar-cta-btn:hover .animate-shimmer {
    animation-duration: 1s;
  }
</style>

