  <script>
    function switchLanguage(lang) {
      // Hide all language content
      document.querySelectorAll('[data-lang]').forEach(el => {
        el.style.display = 'none';
      });

      // Show selected language content
      document.querySelectorAll(`[data-lang="${lang}"]`).forEach(el => {
        el.style.display = 'block';
      });

      // Update button states
      document.getElementById('lang-en').classList.toggle('bg-green-600', lang === 'en');
      document.getElementById('lang-en').classList.toggle('text-white', lang === 'en');
      document.getElementById('lang-en').classList.toggle('text-gray-700', lang !== 'en');

      document.getElementById('lang-id').classList.toggle('bg-green-600', lang === 'id');
      document.getElementById('lang-id').classList.toggle('text-white', lang === 'id');
      document.getElementById('lang-id').classList.toggle('text-gray-700', lang !== 'id');

      // Store preference
      localStorage.setItem('preferred-language', lang);
    }

    // Initialize language on page load
    document.addEventListener('DOMContentLoaded', function() {
      const preferredLang = localStorage.getItem('preferred-language') || 'en';
      switchLanguage(preferredLang);

      // Add event listeners for language buttons
      document.getElementById('lang-en').addEventListener('click', function() {
        switchLanguage('en');
      });

      document.getElementById('lang-id').addEventListener('click', function() {
        switchLanguage('id');
      });
    });
  </script>
